# Default server configuration
#

upstream PEMC-Rule-Mapping-OCR {
	server unix:/home/mike/python-apps/PEMC-Rule-Mapping-OCR/run/gunicorn.sock fail_timeout=0;
}

upstream PEMC-Rule-Mapping-OCR-dev {
	server unix:/home/mike/python-apps/PEMC-Rule-Mapping-OCR-dev/run/gunicorn.sock fail_timeout=0;
}

upstream PEMC-Rule-Mapping-OCR-omega {
	server unix:/home/mike/python-apps/PEMC-Rule-Mapping-OCR-omega/run/gunicorn.sock fail_timeout=0;
}


server {
	listen 80 default_server;
	listen [::]:80 default_server;

	# SSL configuration
	#
	# listen 443 ssl default_server;
	# listen [::]:443 ssl default_server;
	#
	# Note: You should disable gzip for SSL traffic.
	# See: https://bugs.debian.org/773332
	#
	# Read up on ssl_ciphers to ensure a secure configuration.
	# See: https://bugs.debian.org/765782
	#
	# Self signed certs generated by the ssl-cert package
	# Don't use them in a production server!
	#
	# include snippets/snakeoil.conf;

	root /var/www/html;

	# Add index.php to the list if you are using PHP
	index index.html index.htm index.nginx-debian.html;

	server_name _;

	proxy_redirect off;
	proxy_set_header X-Real-IP $remote_addr;
	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	proxy_set_header Host $http_host;

	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		try_files $uri $uri/ =404;
	}

	# Documentation
	location /documentation/ {
		proxy_pass http://localhost:5125/documentation/;
	}

	# DOCUMENT ARCHIVES
	location /document_archives/ {
		proxy_pass http://localhost:5119/;
	}
	# RULE MAPPING
	location /rule_mapping/ {
		proxy_pass http://localhost:5120/;
	}
	# TECH SUPPORT
	location /tech_support/ {
		proxy_pass http://localhost:5122/;
	}
	# WEBSOICKET
	location /websocket/ {
		proxy_pass http://localhost:5126/;
	}
	location /user/ {
		proxy_pass http://localhost:5123/;
	}
	location /pemc {
		try_files $uri $uri/ /pemc_client/index.html;
	}

	location /dev_pemc{
		try_files $uri $uri/ /pemc_client_dev/index.html;
	}
	location /omega_pemc{
		try_files $uri $uri/ /pemc_omega/index.html;
	}
	location /api/rule_mapping/ {
		proxy_pass http://PEMC-Rule-Mapping-OCR/;
	}

	# REPORTS
	location /reports/ {
		proxy_pass http://localhost:5124/;
	}

	# DEV
	location /dev/document_archives/ {
		proxy_pass http://localhost:5319/;
	}
	#added by criss
	location /dev/websocket/ {
		proxy_pass http://localhost:5326/;
	}
	location /dev/socket.io/{
		add_header 'Referrer-Policy' 'origin';
		add_header 'Access-Control-Allow-Origin' '*' always;

		proxy_pass http://localhost:5326;
		proxy_http_version 1.1;
		proxy_set_header Upgrader $http_upgrade;
		proxy_set_header Connection "upgrade";
	}

	location /dev/rule_mapping/ {
		proxy_pass http://localhost:5320/;
	}

	location /dev/tech_support/ {
		proxy_pass http://localhost:5322/;
	}

	location /socket.io/ {
		add_header 'Referrer-Policy' 'origin';
		add_header 'Access-Control-Allow-Origin' '*' always;

		proxy_pass http://localhost:5126;

		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
	}

	location /dev/reports/ {
		proxy_pass http://localhost:5324/;
	}

	location /dev/user/ {
		proxy_pass http://localhost:5323/;
	}

	location /dev/api/rule_mapping/beta/ {
		proxy_pass http://PEMC-Rule-Mapping-OCR-dev/;
	}

	location /dev/api/rule_mapping/omega/ {
		proxy_pass http://PEMC-Rule-Mapping-OCR-omega/;
	}

	location /dev/api/rule_mapping/ {
		#proxy_pass http://PEMC-Rule-Mapping-OCR-dev/;
		proxy_pass http://PEMC-Rule-Mapping-OCR-omega/;
	}




	# pass PHP scripts to FastCGI server
	#
	#location ~ \.php$ {
	#	include snippets/fastcgi-php.conf;
	#
	#	# With php-fpm (or other unix sockets):
	#	fastcgi_pass unix:/run/php/php7.4-fpm.sock;
	#	# With php-cgi (or other tcp sockets):
	#	fastcgi_pass 127.0.0.1:9000;
	#}

	# deny access to .htaccess files, if Apache's document root
	# concurs with nginx's one
	#
	#location ~ /\.ht {
	#	deny all;
	#}
}


